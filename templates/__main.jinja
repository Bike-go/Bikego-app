<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="{{ url_for('static', filename='icons/logo.ico') }}" type="image/x-icon">

    <!-- CSS choosing -->
    {% if page in ['login', 'register', 'reset_password', 'confirm_password'] %}
        <link rel="stylesheet" href="{{ url_for('static', filename='css/log_reg.css') }}">
    {% else %}
        <link rel="stylesheet" href="{{ url_for('static', filename='css/style.css') }}">
    {% endif %}

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>{{ title }}</title>
</head>
<body>
    {% if page not in ['login', 'register', 'reset_password', 'confirm_password'] %}
        {% include '__header.jinja' %}
    {% endif %}

    <!-- Single content block -->
    {% block content %}
    {% endblock %}

    {% if page not in ['login', 'register', 'reset_password', 'confirm_password'] %}
        {% include '__footer.jinja' %}
    {% endif %}

    <script src="{{ url_for('static', filename='js/script.js') }}"></script>
</body>
</html>
