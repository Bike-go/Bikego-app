{% extends '__main.jinja' %}

{% block content %}
<main class="login-page">
    <div class="user_icon">
        <i class="fa-regular fa-user"></i>
    </div>
    <form method="POST" class="login" action="{{ url_for('user_bp.forgot_password') }}">
        <h1>Obnovit heslo</h1>

        {{ form.hidden_tag() }}

        <div class="input-group">
            <label for="{{ form.email.id }}" class="form-label">{{ form.email.label }}</label>
            <i class="fa-solid fa-envelope"></i>
            {{ form.email(id="email", class="form-field", placeholder="E-mail") }}
            {% if form.email.errors %}
            <ul class="errors">
                {% for error in form.email.errors %}
                <li>{{ error }}</li>
                {% endfor %}
            </ul>
            {% endif %}
        </div>

        <div class="row_reg">
            {{ form.submit(class="create") }}
        </div>

        {% with messages = get_flashed_messages() %}
        {% if messages %}
        <ul class="flashes">
            {% for message in messages %}
            <li class="alert alert-{{ 'success' if 'success' in message else 'danger' }}">{{ message }}</li>
            {% endfor %}
        </ul>
        {% endif %}
        {% endwith %}
    </form>
</main>
{% endblock %}