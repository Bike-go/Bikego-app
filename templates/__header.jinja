{% block header %}
<header class="pc">
    <img src="{{ url_for('static', filename='images/logo.png') }}" alt="BikeGo" class="logo_image">
    <nav>
        <a href="{{ url_for('home') }}">Domů</a>
        <a href="{{ url_for('news') }}">Novinky</a>
        <a href="{{ url_for('rentals') }}">Půjčovná</a>
        <a href="{{ url_for('photos') }}">Foto</a>
        <a href="{{ url_for('contacts') }}">Kontakt</a>
    </nav>
    <a href="{{ url_for('user_bp.login') }}" class="acc_btn">Můj účet</a>
</header>

<header class="mobile">
    <div class="overlay" id="overlay" onclick="toggleMenu()"></div>
    <div class="side_menu" id="sideMenu">
        <a href="{{ url_for('home') }}">Domů</a>
        <a href="{{ url_for('news') }}">Novinky</a>
        <a href="{{ url_for('rentals') }}">Půjčovna</a>
        <a href="{{ url_for('photos') }}">Foto</a>
        <a href="{{ url_for('contacts') }}">Kontakt</a>
    </div>

    <div class="Kontakt">
        <i class="fa-solid fa-bars" id="btn_menu"></i>
        <p class="title">BikeGO</p>
    </div>

    <a href="{{ url_for('user_bp.login') }}" class="acc_btn">
        <i class="fa-regular fa-user"></i>
    </a>

</header>
{% endblock %}