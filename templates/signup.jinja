{% extends '__main.jinja' %}

{% block content %}
<main>
    <div class="user_icon">
        <i class="fa-regular fa-user"></i>
    </div>
    <form method="POST" class="login">
        <h1>Registrace</h1>

        <!-- CSRF Token for Security (Automatically added by Flask-WTF) -->
        {{ form.hidden_tag() }}

        <!-- Username Field with Icon -->
        <div class="input-group">
            <i class="fa-solid fa-user"></i>
            {{ form.username(class="form-field", placeholder="Uživatelské jméno") }}
        </div>

        <!-- Email Field with Icon -->
        <div class="input-group">
            <i class="fa-solid fa-envelope"></i>
            {{ form.email(class="form-field", placeholder="Email") }}
        </div>

        <!-- Password Field 0 with Toggle Eye Icon -->
        <div class="input-group">
            <i class="fa-solid fa-lock"></i>
            {{ form.password0(class="form-field", placeholder="Heslo") }}
            <i class="fa-solid fa-eye" id="toggle-password0" style="cursor: pointer;"
                onclick="togglePassword('password0', 'toggle-password0')"></i>
        </div>

        <!-- Password Field 1 with Toggle Eye Icon -->
        <div class="input-group">
            <i class="fa-solid fa-lock"></i>
            {{ form.password1(class="form-field", placeholder="Potvrdit heslo") }}
            <i class="fa-solid fa-eye" id="toggle-password1" style="cursor: pointer;"
                onclick="togglePassword('password1', 'toggle-password1')"></i>
        </div>

        <div class="row_reg">
            {{ form.submit(class="create") }}
        </div>

        {% with messages = get_flashed_messages() %}
        {% if messages %}
        <ul class="flashes">
            {% for message in messages %}
            <li>{{ message }}</li>
            {% endfor %}
        </ul>
        {% endif %}
        {% endwith %}

        <a class="white_btn" href="{{ url_for('user_bp.login') }}">Už máte účet? Přihlaste se zde</a>
    </form>
</main>
{% endblock %}