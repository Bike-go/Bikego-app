{% block footer %}
<footer>
    <div class="up_container">
        <div class="container_1">
            <div class="title">BikeGO</div>
            <div class="address">
                <p>Česká republika, Brno</p>
                <p>Ulice 180/12</p>
            </div>
        </div>

        <div class="container_2">
            <div class="contact-info">
                <div class="contact-item">
                    <i class="fa-solid fa-phone" aria-hidden="true"></i>
                    <span>+420 123 456 789</span>
                </div>
                <div class="contact-item">
                    <i class="fa-solid fa-mobile" aria-hidden="true"></i>
                    <span>+280 123 000 258</span>
                </div>
                <div class="contact-item">
                    <i class="fa-solid fa-fax" aria-hidden="true"></i>
                    <span>+420 64211 5485 -200</span>
                </div>
                <div class="contact-item">
                    <i class="fa-solid fa-envelope" aria-hidden="true"></i>
                    <span>bikego@email.cz</span>
                </div>
            </div>
            <div class="legal-links">
                <a href="{{ url_for('legal_notices_bp.cookies') }}" aria-label="Cookies Policy">Cookies</a>
                <a href="{{ url_for('legal_notices_bp.tos') }}" aria-label="Terms of Service">Podmínky služby</a>
                <a href="{{ url_for('legal_notices_bp.privacy') }}" aria-label="Privacy Policy">Zásady ochrany osobních
                    údajů</a>
            </div>
        </div>
    </div>

    <div class="down_container">
        <div class="social-links">
            <a href="mailto:bikego@email.cz" class="social-icon fa-regular fa-envelope" title="Email"
                aria-label="Email"></a>
            <a href="https://www.facebook.com/BikeGo" class="social-icon fa-brands fa-facebook" title="Facebook"
                aria-label="Facebook"></a>
            <a href="https://www.instagram.com/BikeGo" class="social-icon fa-brands fa-instagram" title="Instagram"
                aria-label="Instagram"></a>
            <a href="https://www.youtube.com/c/BikeGo" class="social-icon fa-brands fa-youtube" title="YouTube"
                aria-label="YouTube"></a>
        </div>

        <nav class="footer-nav">
            <a href="{{ url_for('home_bp.home') }}" class="nav-link" aria-label="Home">Domů</a>
            <a href="{{ url_for('news_bp.news') }}" class="nav-link" aria-label="News">Novinky</a>
            <a href="{{ url_for('rentals_bp.rentals') }}" class="nav-link" aria-label="Rentals">Půjčovna</a>
            <a href="{{ url_for('photos_bp.photos') }}" class="nav-link" aria-label="Photos">Foto</a>
            <a href="{{ url_for('contacts_bp.contacts') }}" class="nav-link" aria-label="Contact">Kontakt</a>
        </nav>

        <div class="footer-logo">
            <img src="{{ url_for('static', filename='images/logo.png') }}" alt="BikeGo Logo" class="logo_image">
        </div>
    </div>
</footer>
{% endblock %}